{
  "name": "storial",
  "displayName": "Storial",
  "description": "AI-powered component stories for React/Next.js - like Storybook, but magical",
  "version": "0.1.0",
  "publisher": "amelmo",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "storial",
    "storybook",
    "nextjs",
    "react",
    "components",
    "stories",
    "ai"
  ],
  "activationEvents": [
    "workspaceContains:**/package.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "storial",
          "title": "Storial",
          "icon": "resources/icons/explorer.svg"
        }
      ]
    },
    "views": {
      "storial": [
        {
          "id": "storialExplorer",
          "name": "Explorer",
          "contextualTitle": "Storial"
        }
      ]
    },
    "commands": [
      {
        "command": "storial.openStoriesManager",
        "title": "Stories Manager",
        "icon": "$(book)",
        "category": "Storial"
      },
      {
        "command": "storial.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Storial"
      },
      {
        "command": "storial.openInBrowser",
        "title": "Open in Browser",
        "icon": "$(link-external)",
        "category": "Storial"
      },
      {
        "command": "storial.goToFile",
        "title": "Go to File",
        "icon": "$(go-to-file)",
        "category": "Storial"
      },
      {
        "command": "storial.generateStory",
        "title": "Generate Story",
        "icon": "$(sparkle)",
        "category": "Storial"
      },
      {
        "command": "storial.viewInWebUI",
        "title": "View in Web UI",
        "icon": "$(link-external)",
        "category": "Storial"
      },
      {
        "command": "storial.startServer",
        "title": "Start Server",
        "category": "Storial"
      },
      {
        "command": "storial.stopServer",
        "title": "Stop Server",
        "category": "Storial"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "storial.openStoriesManager",
          "when": "view == storialExplorer",
          "group": "navigation@1"
        },
        {
          "command": "storial.refresh",
          "when": "view == storialExplorer",
          "group": "navigation@2"
        },
        {
          "command": "storial.openInBrowser",
          "when": "view == storialExplorer",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "storial.generateStory",
          "when": "view == storialExplorer && viewItem =~ /^(component|page)$/",
          "group": "1_actions@1"
        },
        {
          "command": "storial.viewInWebUI",
          "when": "view == storialExplorer && viewItem =~ /^(component|page)$/",
          "group": "1_actions@2"
        },
        {
          "command": "storial.goToFile",
          "when": "view == storialExplorer && viewItem =~ /^(component|page|hook|context|utility|detailLink)$/",
          "group": "2_navigation@1"
        },
        {
          "command": "storial.goToFile",
          "when": "view == storialExplorer && viewItem =~ /^(component|page|hook|context|utility)$/",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "open": "^10.1.0"
  }
}
